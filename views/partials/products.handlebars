<div class="grid-container">
  {{#each products as |product|}}
    <div class="product">
      <img class="tile" src="/images/{{product.filename}}" alt="{{product.filename}}">
      <h4>{{product.name}}</h4>
      <p>{{product.description}}</p>
      <p>Price:{{product.price}} $</p>
      <p>{{product.category.name}}</p>
    </div>
  {{/each}}
</div>