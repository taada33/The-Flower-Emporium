<template name="section">
    <section>
        <div class="header-image-container">
            <img class="hero" src="../assets/hero.jpg" alt="">
            <img src="../assets/banner-imageOct2020.webp" alt="Header Image">
            <img src="../assets/F3AAC692-2552-4E81-AA7E-D177B46745AD.jpg" alt="Header Image">
            <img src="../assets/0D1F4FE9-EB8A-4A57-8041-824734D62542_750x.webp" alt="Header Image">
          </div>
        
          <div class="grid-container">
            {{#each products}}
            <div>Flower {{this.id}}
                <p>Name: {{this.name}}</p>
                <p>Description: {{this.description}}</p>
                <p>Price: {{this.price}}</p>
            </div>
            {{/each}}
          </div>   
    </section>
</template>